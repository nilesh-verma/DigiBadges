@model DigiBadges.Models.ViewModels.AwardBadge
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Award Badges";

}

<form method="post" >
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input hidden asp-for="@Model.id" />
        <div class="col-12 border-bottom text-center">
            <h2 class="text-primary">@title</h2>
            <div class="text-center"><p>To award the earner on completing their pathway.</p></div>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.Badge_User_Collection.RecipientName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Badge_User_Collection.RecipientName" class="form-control" />

                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.Badge_User_Collection.RecipientEmail"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Badge_User_Collection.RecipientEmail" class="form-control" />
                    <span asp-validation-for="@Model.Badge_User_Collection.RecipientEmail" class="text-danger"></span>
                </div>
            </div>
            @*<div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.Badge_User_Collection.ExpirationDate"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Badge_User_Collection.ExpirationDate" value="" type="text" id="datepicker" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
            <div class="col-4">
                <label asp-for="@Model.Badge_User_Collection.IssuedDate"></label>
            </div>
            <div class="col-8">
                <input asp-for="@Model.Badge_User_Collection.IssuedDate" value="" type="text" id="datepicker" class="form-control" />
            </div>
        </div>
            *@

            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">

                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger form-control">Cancel</a>
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-success form-control" asp-route-id="@Model.id">Award Badge</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.tiny.cloud/1/m0yrc02gypdwbpw2su9vwys5mahxctd2f8lu5faa4uc5ydr5/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });


        function validateInput() {
            if (document.getElementById("uploadBox").value == "") {
                swal("Error", "Please select an image", "error");
                return false;
            }
            return true;
        };
        $(function () {
            $("#datepicker").datepicker({
                minDate: +1, maxDate: "+3M"
            });
        });
    </script>

}