@model DigiBadges.Models.ViewModels.IssuerVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model != null)
{
    <div class="row mt-2 " style="background-color:white;border-radius:5px">
        <div class="col-3"><p class="float-left m-2"><b>Issuers :</b>@Model.issuers.Count() issuers</p></div>
        <div class="col-9"><a class="float-right btn btn-secondary m-2" asp-controller="Issuers" asp-action="Create">Create New Issuer</a></div>
    </div>

    <br />
    <br />
    <br />
    <div class="text-center">
        <h3 style="color:cornflowerblue">Issuers</h3>      
    </div>
    <div class="container" style="border-style: ridge;">

        @foreach (var issuer in Model.issuers)
        {

            <div class="row  " style="border:solid 0.2px ;margin:5px;border-radius:5px;">
                <div class="col-4" style="border-right:1px solid #bbb9b9;"><img src=@issuer.ImagePath style="width:100%;height:150px" /></div>
                <div class="col-4">
                    <div class="row  m-3">
                        <h4 style="color:blueviolet"><a asp-controller="Issuers" asp-action="Issuers" asp-route-id=@issuer.Id>@issuer.Name</a></h4> &nbsp;
                        <div class="dropdown">
                            <button class="dropbtn">
                                <i class="fas fa-info"></i>
                            </button>
                            <div class="dropdown-content">
                                <a asp-controller="Issuers" asp-action="IssuersEdit" asp-route-id=@issuer.Id>Edit</a>
                                <a asp-controller="Issuers" asp-action="IssuersDelete" asp-route-id=@issuer.Id>Delete</a>

                            </div>
                        </div>
                    </div>
                    <div class="row  m-3">
                        @issuer.Description
                    </div>


                </div>
                <div class="col-4 " style="        margin-top: 20px;">
                    <div class="row">
                        <a class="float-right btn btn-primary" asp-controller="Issuers" asp-action="Issuers" asp-route-id=@issuer.Id>  View </a>

                    </div>
                    @* <div class="row" style="padding-bottom:2px">

                            <a class="float-right btn btn-primary" asp-controller="Issuers" asp-action="IssuersEdit" asp-route-id=@issuer.Id>  Edit</a><br>

                        </div>
                        <div class="row">

                            <a class="float-right btn btn-danger" asp-controller="Issuers" asp-action="IssuersDelete" asp-route-id=@issuer.Id>Delete</a><br>
                        </div>
                    *@


                </div>

            </div>
            <hr />

        }
    </div>

}

else
{
    <div class="text-center"><h3>You have no issuers</h3></div>
    <div class="text-center"><p>Issuers allow you to create badges and award the badges to employee or earner.</p></div>

    <br />
    <div class="row">
        @*<div class="col-4"></div>*@
        <div class="col text-center"><a asp-controller="Issuers" asp-action="Create">Create Issuers</a></div>
        @*<div class="col-4"></div>*@
    </div>
    <br />
    <div class="row">
        @*<div class="col-3"></div>*@
        <div class="col text-center "><img src="~/images/issuers.png" style="align-content:center;opacity: 0.5;" alt="Issuers" /></div>
        @*<div class="col-3"></div>*@
    </div>
}