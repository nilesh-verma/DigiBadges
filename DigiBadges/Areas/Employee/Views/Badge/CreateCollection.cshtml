@model DigiBadges.Models.BadgeCollections;

    <div style="
    background-color: white;
    padding: 60px;
    box-shadow: 0px 0px 10px 0px #000;">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <h2 style="font-family:sans-serif">Create Collections</h2>
                <p style="font-family:sans-serif">You can use collection to organize and share your badges</p>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput" asp-for="CollectionName">Collection Name</label>
                <input type="text" asp-for="CollectionName" class="form-control" id="formGroupExampleInput" placeholder="Enter Name">
                <span asp-validation-for="CollectionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2" asp-for="CollectionDescription">Collection Description</label>
                <textarea type="text" class="form-control" asp-for="CollectionDescription" id="formGroupExampleInput2" placeholder="Enter Description">
</textarea>
                <span asp-validation-for="CollectionDescription" class="text-danger"></span>
            </div>
            <div class=" float-left" style="margin-right: 2px;">
                <a type="submit" class="btn btn-danger " asp-action="Index">Cancle</a>
            </div> &nbsp;
            <div class="form-group float-left">
                <button type="submit" class="btn btn-success form-control">Create Collection</button>
            </div>


        </form>
        
    </div>
    
   
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}