@page
@model DigiBadges.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>@ViewData["Title"]</h1>
<h4>Enter your email.</h4>
<hr />
<div class="row">
    <div class="col-md-4">        
        <form method="post" asp-page-handler="Submit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" id="email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Enter Verification code</label>
                <input asp-for="Input.Code" class="form-control" />
                <span asp-validation-for="Input.Code" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <form method="post" asp-page-handler="ConfirmCode">
            <hr />
            <div class="form-group">

                <input type="hidden" id="vemail" name="vemail" />

                <button class="btn btn-primary">Get new email verification code</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script language="javascript" src="/js/ForgotPwdScript.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
